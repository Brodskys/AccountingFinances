<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#014d81"
    tools:context=".OperationDetails">
    <RelativeLayout
        android:id="@+id/comp_rel"
        android:layout_width="match_parent"
        android:layout_height="434dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="2dp"
        android:background="#084873"
        tools:context=".AddOperation">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="246dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/main_text"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="52dp"
            android:drawableRight="@drawable/right"
            android:onClick="onClick2"
            android:text="@string/category_text"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="246dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/detail"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/date_edit"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="218dp"
            android:layout_marginBottom="280dp"
            android:backgroundTint="#FAFAFA"
            android:cursorVisible="false"
            android:drawableRight="@drawable/down"
            android:drawableTint="#FFFFFF"
            android:hint="Дата"
            android:inputType="none"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp"></EditText>
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="410dp"
            android:layout_height="171dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="66dp"
            android:background="#045A97"
            android:cursorVisible="false"
            android:drawableTint="#FDFDFD"
            android:inputType="textMultiLine"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#F1EEEE"
            android:textSize="25sp"></EditText>
        <EditText
            android:id="@+id/time_edit"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="282dp"
            android:backgroundTint="#FAFAFA"
            android:cursorVisible="false"
            android:drawableRight="@drawable/down"
            android:drawableTint="#FDFDFD"
            android:hint="Время"
            android:inputType="none"
            android:textColor="#FFFFFF"
            android:textColorHint="#F1EEEE"
            android:textSize="20sp"></EditText>
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="380dp"
            android:drawableLeft="@drawable/place"
            android:drawableRight="@drawable/right"
            android:onClick="onClick3"
            android:text="@string/location"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="#045A97"
        tools:context=".AddOperation">
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="32dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="18dp"
            android:onClick="onClick_Back2"
            android:tint="#FFFFFF"
            app:srcCompat="@drawable/left" />
        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="34dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="1dp"
            android:tint="#FFFFFF"
            app:srcCompat="@drawable/delete" />
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="144dp"
            android:layout_marginTop="14dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />
        <Button
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="83dp"
            android:onClick="onClick1"
            android:text="BYN"
            android:textAllCaps="false" />
        <EditText
            android:id="@+id/etWidth1"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FAFAFA"
            android:cursorVisible="true"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:textAlignment="viewEnd"
            android:textColor="#FFFFFF"
            android:textSize="39sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></EditText>
    </RelativeLayout>
    <Button
        android:id="@+id/update_btn"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="537dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/tochange"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp" />
    <RelativeLayout
        android:id="@+id/categ_rel"
        android:layout_width="match_parent"
        android:layout_height="675dp"
        android:background="@color/colors"
        android:visibility="invisible">
        <ListView
            android:id="@+id/countriesList"
            android:layout_width="match_parent"
            android:layout_height="615dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:background="#045A97">
        </ListView>
        <TextView
            android:id="@+id/textView12"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/adamina"
            android:text="@string/category_text"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="23dp"
            android:onClick="onClick_Back"
            android:layout_height="18dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:tint="#FFFFFF"
            app:srcCompat="@drawable/left" />
    </RelativeLayout>
</RelativeLayout>